<%= form_for @producto do |f| %>
  <div>
    <%= f.label :id_producto %>
    <%= f.number_field :id_producto %>
  </div>
  <div>
    <%= f.label :nombre_producto %>
    <%= f.text_area :nombre_producto %>
  </div>
  <div>
    <%= f.label :descripcion_producto %>
    <%= f.text_field :descripcion_producto %>
  </div>
  <div>
    <%= f.label :precio %>
    <%= f.number_field :precio %>
  </div>
  <div>
    <%= f.label :nombre_tienda %>
    <%= f.text_field :nombre_tienda %>
  </div>
  <div>
    <%= f.label :nombre_categoria %>
    <%= f.text_field :nombre_categoria %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
